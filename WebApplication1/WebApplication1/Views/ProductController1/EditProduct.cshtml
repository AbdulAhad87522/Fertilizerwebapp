@{
	ViewData["Title"] = "Edit Product";
}

@model Products

<div class="container mt-3">
	<form asp-action="EditProduct" method="post">
		<div style="height: 100px;">
			<img src="https://mybillbook.in/s/wp-content//uploads/2023/02/Fertiliser-Shop-Billing-Software.jpg"
				 alt="Fertilizer Shop"
				 style="height: 100px; width: auto;" />
		<h1 style="margin-left: 250px ; margin-top: -100px"> Edit Products</h1>
		</div>

		<input asp-for="product_id" type="hidden"></input>
		<div class="form-group">
			<label>Name</label>
			<input class="form-control" asp-for="name"></input>
		</div>

		<div class="form-group">
			<label>Description</label>
			<input class="form-control" asp-for="description"></input>
		</div>

		<div class="form-group">
			<label>Sale Price</label>
			<input class="form-control" asp-for="sale_price"></input>
		</div>

		<div class="form-group">
			<label>Quantity</label>
			<input class="form-control" asp-for="quantity"></input>
		</div>
		<button type="submit" class="btn btn-danger">Update</button>
		<button class="btn btn-dark" asp-action="Show">Cancel</button>
	</form>
</div>