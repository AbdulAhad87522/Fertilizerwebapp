@{
    ViewData["Title"] = "Detail of the suppliers";
}

@model IEnumerable<WebApplication1.Models.Suppliers>

<div style="height: 100px;">
    <img src="https://mybillbook.in/s/wp-content//uploads/2023/02/Fertiliser-Shop-Billing-Software.jpg"
         alt="Fertilizer Shop"
         style="height: 100px; width: auto;" />
    <h1 style="margin-left: 250px ; margin-top: -100px"> Details of suppliers</h1>
</div>
<table style="margin-top: 20px;" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Supplier ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supp in Model)
        {
            <tr>
                <td>@supp.supplier_id</td>
                <td>@supp.name</td>
                <td>@supp.phone</td>
                <td>@supp.address</td>
                <td>
                    <a href="javascript:void(0);"
                       class="btn btn-sm btn-primary edit-btn"
                       data-id="@supp.supplier_id">
                        Edit
                    </a>
                </td>
                <td>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-id="@supp.supplier_id">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="editSupplierModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Supplier</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Edit form will load here dynamically -->
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Supplier?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // Open modal and load partial
            $(".edit-btn").click(function () {
                var id = $(this).data("id");
                $.get("/Supplier/Edit/" + id, function (data) {
                    $("#editSupplierModal .modal-body").html(data);
                    var myModal = new bootstrap.Modal(document.getElementById("editSupplierModal"));
                    myModal.show();
                });
            });

            // Submit form via AJAX
            $(document).on("submit", "#editSupplierForm", function (e) {
                e.preventDefault();
                $.post($(this).attr("action"), $(this).serialize(), function (data) {
                    if (data.success) {
                        location.reload();
                    } else {
                        $("#editSupplierModal .modal-body").html(data);
                    }
                });
            });
        });
    </script>

    <script>
        var deleteForm = document.getElementById('deleteForm');
        var deleteModal = document.getElementById('confirmDeleteModal');

        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var supplierid = button.getAttribute('data-id');

            // Update form action dynamically
            deleteForm.action = '/Supplier/Delete/' + supplierid;
        });
    </script>
}
