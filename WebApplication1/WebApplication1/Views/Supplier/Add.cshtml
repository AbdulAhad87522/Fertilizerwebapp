@{
    ViewData["Title"] = "Add Supplier";
}

@model Suppliers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
    <div class="container mt-4">
        <form method="post">
            <h2>Add Supplier</h2>
            <div class="form-group">
                <label>Name</label>
                    <input class="form-control" asp-for="name"></input>
            </div>

            <div class="form-group">
                <label>Phone</label>
                    <input class="form-control" asp-for="phone"></input>
            </div>

            <div class="form-group">
                <label>Address</label>
                    <input class="form-control" asp-for="address"></input>
            </div>

            <button class="btn btn-danger" type="submit">Add Product</button>
            @if (ViewBag.Message != null)
            {
                <script>
                    alert(`@ViewBag.Message`);
                </script>
            }
        </form>
    </div>
</body>
</html>
