@{
    ViewData["Title"] = "Add Supplier";
}

@model Suppliers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
    <div style="height: 100px;">
        <img src="https://mybillbook.in/s/wp-content//uploads/2023/02/Fertiliser-Shop-Billing-Software.jpg"
             alt="Fertilizer Shop"
             style="height: 100px; width: auto;" />
        <h1 style="margin-left: 250px ; margin-top: -100px"> Edit Suppliers</h1>
    </div>
    <div class="container mt-4">
        <form method="post">
            <h2>Add Supplier</h2>
            <div class="form-group">
                <label>Name</label>
                    <input class="form-control" asp-for="name"></input>
            </div>

            <div class="form-group">
                <label>Phone</label>
                    <input class="form-control" asp-for="phone"></input>
            </div>

            <div class="form-group">
                <label>Address</label>
                    <input class="form-control" asp-for="address"></input>
            </div>

            <button class="btn btn-danger" type="submit">Add Product</button>
            @if (ViewBag.Message != null)
            {
                <script>
                    alert(`@ViewBag.Message`);
                </script>
            }
        </form>
    </div>
</body>
</html>
