@{
    ViewData["Title"] = "Login";
}
@model users
<div class="container mt-4">
    <h1>Login</h1>
    <form method="post">
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" asp-for="Email"></input>
        </div>

        <div class="form-group">
            <label>Password</label>
            <input class="form-control" asp-for="Password"></input>
        </div>
        <button type= "submit" style="margin-top: 20px;" class="btn btn-danger">Login</button>
        <a href="#">forgot password</a>
        @if(ViewBag.Message != null)
        {
            <script>
                alert('@ViewBag.Message');
            </script>
        }
    </form>
</div>
    